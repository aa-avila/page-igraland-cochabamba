        #0000 0
      ),
      conic-gradient(
        from -75deg at 50% 13.39%,
        var(--bgC1) 60deg,
        var(--bgC3) 0 150deg,
        var(--bgC2) 0 210deg,
        #0000 0
      ),
      conic-gradient(
        from 15deg at 36.6% 63.4%,
        var(--bgC1) 60deg,
        var(--bgC3) 0 150deg,
        var(--bgC1) 0 210deg,
        var(--bgC2) 0 75%,
        var(--bgC3) 0
      );
    background-size: var(--bgSize) var(--bgSize);
  }
</style>
